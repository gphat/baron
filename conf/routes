# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(category: Option[String])

GET     /api/category               controllers.api.Link.categories(query: Option[String])

GET     /api/links                  controllers.api.Link.list(category: Option[String])
POST    /api/links                  controllers.api.Link.add
GET     /api/links/:id              controllers.api.Link.item(id: Long)
DELETE  /api/links/:id              controllers.api.Link.delete(id: Long)
POST    /api/links/:id/read/:userId controllers.api.Link.read(id: Long, userId: Long)
DELETE  /api/links/:id/read/:userId controllers.api.Link.unRead(id: Long, userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
